@using (Html.BeginForm("Index","Data",FormMethod.Post,new { style="margin-left:10px;"}))
{
    <container style="margin-left:10px;">
        <div class="row">

            <div class="col col-1">
                @Html.Label("m", "Homme")
                @Html.CheckBox("m", false)
            </div>
            <div class="col col-1">

                @Html.Label("f", "Femme")
                @Html.CheckBox("f", false)

            </div>
        </div>
        <div class="row">
            <div class="col col-1">
                @Html.Label("firstName", "Prénom")
                
            </div>
            <div class="col col-1">
                @Html.TextBox("firstName", "")
                
            </div>
        </div>
        <div class="row">
            <div class="col col-1">
                @Html.Label("lastName", "Nom")
            </div>
            <div class="col col-1">
                @Html.TextBox("lastName", "")
            </div>
        </div>
    </container>
}